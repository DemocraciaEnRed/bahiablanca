#landing
  .filter
    margin-top 30px

    .author-filter
      margin-top 10px
  .sort
    padding-top 5px
    .btn
      padding 2px 6px 3px

  .btn-group
      &.active
        .dropdown-list
          display block
      &.hide
        display none

    .dropdown-list
      display none
      position absolute
      z-index 1000
      margin-top 2px
      padding 5px 0
      min-width 160px
      width 100%
      list-style none
      border-radius 2px
      border 1px solid rgba(#000,.15)
      box-shadow 1px 1px 4px -1px rgba(#000, .175)
      background-color #f9f9f9

    .toggle-author
      padding-right 20px
      .caret
        right 6px

  .card
    padding-top 10px
    .row
      margin-bottom 30px

  .law
    height 500px
    margin-bottom 5px

  a
    text-decoration none

    h2
      font-size 1.5em
      margin-top 0
      margin-bottom 1em
      padding 10px 15px
      font-weight 900
      text-transform uppercase
      border-radius 5px

  .author-wrapper
    text-align center
    min-height 40px
    padding-top 8px
    margin-bottom 16px

    .author
      display inline-block
      position relative
      margin 0
      padding-left 3.6em

      .author-link
        color black

      p
        margin 0 0 2px

      img
        display inline-block
        position absolute
        left 0
        top 50%
        margin-top -1.5em
        width 3em
        height 3em
        border-radius 100%
  .summary
    overflow hidden
    height 174px
    &:before
      content ''
      width 90%
      height 40%
      position absolute
      left 19px
      top 284px
      background linear-gradient(transparent 150px, rgb(245,245,245))
      pointer-events none

    p
      display inline-block
      font-size 1.1em
      margin 0
      width 100%

      &:after
        content '\00a0\00a0/\00a0\00a0'
      &:last-child:after
        content ''
      a
        color #000
        text-decoration none
        border-bottom 1px solid transparent
        transition all .1s ease-in
        &:hover
          color #333
          border-bottom 1px solid #666
  .pic
    width 100%
    margin-bottom 12px
    padding-top 45%
    position relative
    background-size cover
    background-repeat no-repeat
    background-position center center
