#landing
  footer
    display block
    text-align center
    margin 12px auto
    padding-top 22px

    img
      max-width 200px

    .tos
      margin-top 5px

      a
        font-size 12px
        font-weight normal
        color black

        &:hover
          color black
          text-transform underline

  .filter
    margin-top 30px
    .lower
      margin-top 10px

    .filters
      .text
        margin-top 6px

    .dropdown
      width 100%
      margin-left 5px
      .dropdown-button
        width 100%

    .author-filter
      margin-top 10px

  .sort
    .dropdown
      width 100%

  .card
    padding-top 10px
    .row
      margin-bottom 30px

  .law
    position relative
    overflow hidden
    height 500px
    margin-bottom 5px
    z-index 0

    &:before
      content ''
      width 100%
      height 45px
      position absolute
      left 0
      bottom 0
      background linear-gradient(transparent, #f5f5f5 30px)
      pointer-events none
      z-index 10

  a
    text-decoration none

    h2
      font-size 1.5em
      margin-top 0
      margin-bottom 1em
      padding 10px 15px
      font-weight 900
      text-transform uppercase
      border-radius 5px

  .author-wrapper
    text-align center
    min-height 40px
    padding-top 8px
    margin-bottom 16px

    .author
      display inline-block
      position relative
      margin 0
      padding-left 3.6em

      .author-link
        color black

      p
        margin 0 0 2px

      img
        display inline-block
        position absolute
        left 0
        top 50%
        margin-top -1.5em
        width 3em
        height 3em
        border-radius 100%

  .summary
    p
      display inline-block
      font-size 1.1em
      margin 0
      width 100%

      &:after
        content '\00a0\00a0/\00a0\00a0'
      &:last-child:after
        content ''
      a
        color #000
        text-decoration none
        border-bottom 1px solid transparent
        transition all .1s ease-in
        &:hover
          color #333
          border-bottom 1px solid #666
  .pic
    width 100%
    margin-bottom 12px
    padding-top 45%
    position relative
    background-size cover
    background-repeat no-repeat
    background-position center center
