html
  head
    meta(property='og:title', content='#{law.mediaTitle}')
    meta(property='og:type', content='website')
    meta(property='og:url', content='#{baseUrl}/law/#{law.id}')
    - if (law.imageUrl)
      meta(property='og:image', content=law.imageUrl)
    - else
      meta(property='og:image', content=config.socialshare.image)
    meta(property='og:site_name', content='#{config.socialshare.siteName}')
    meta(property='og:description', content=strip(law.summary))
